{
  "compilerOptions": {
    "noImplicitAny": false,
    "module": "none",
    "target": "es6",
    "lib": [ "es6", "DOM" ],
    "sourceMap": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "removeComments": false,
    "typeRoots": [
      "../../types/client"
    ]
  },
  "exclude": [
    "node_modules"
  ],
  "compileOnSave": true
}